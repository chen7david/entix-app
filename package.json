{
	"name": "entix-app",
	"type": "module",
	"scripts": {
		"dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
		"dev:api": "wrangler dev --local --port 3000",
		"dev:web": "cd web && npm run dev",
		"dev:install": "npm ci && npm run install:web",
		"build:web": "cd web && npm run build",
		"install:web": "cd web && npm ci",
		"deploy": "npm run install:web && npm run build:web && wrangler deploy --minify --env prod",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings"
	},
	"dependencies": {
		"concurrently": "^9.2.1",
		"hono": "^4.10.8",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"wrangler": "^4.53.0"
	}
}