{
	"name": "entix-app",
	"type": "module",
	"version": "1.0.0",
	"scripts": {
		"dev:init": "npm install && cd web && npm install",
		"dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
		"dev:api": "wrangler dev --local --port 3000",
		"dev:web": "cd web && npm run dev",
		"build:web": "cd web && npm install && npm run build",
		"deploy": "npm run build:web && wrangler deploy --minify --env prod",
		"deploy:staging": "npm run build:web && wrangler versions upload --minify --env staging",
		"cf-typegen": "wrangler types --env-interface CloudflareBindings",
		"db:generate": "drizzle-kit generate",
		"db:studio": "drizzle-kit studio --config drizzle.config.local.ts",
		"db:migrate": "drizzle-kit migrate --config drizzle.config.local.ts",
		"db:migrate:remote": "drizzle-kit migrate"
	},
	"dependencies": {
		"@hono/zod-openapi": "^1.1.5",
		"@hono/zod-validator": "^0.7.5",
		"@scalar/hono-api-reference": "^0.9.28",
		"concurrently": "^9.2.1",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.10.8",
		"hono-pino": "^0.10.3",
		"pino": "^10.1.0",
		"stoker": "^2.0.1",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"better-sqlite3": "^12.5.0",
		"dotenv": "^17.2.3",
		"drizzle-kit": "^0.31.8",
		"wrangler": "^4.53.0"
	}
}