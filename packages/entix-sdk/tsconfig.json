{
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src", // source files go here
    "baseUrl": ".", // needed for paths to work
    "paths": {
      "@models/*": ["src/models/*"],
      "@dtos/*": ["src/dtos/*"],
      "@schemas/*": ["src/schemas/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
