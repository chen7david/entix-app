{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "lib": [
      "ESNext"
    ],
    "types": [
      "@cloudflare/workers-types",
      "jest",
      "node"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "paths": {
      "@shared/*": [
        "./shared/*"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@web/*": [
        "./web/*"
      ]
    }
  },
  "include": [
    "api/**/*",
    "worker-configuration.d.ts",
    "better-auth.config.ts",
    "drizzle.config.ts",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    "web"
  ]
}